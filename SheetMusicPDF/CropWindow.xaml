<Window x:Class="SheetMusicPDF.CropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CropWindow" Height="114" Width="372"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Slider ValueChanged="SliderCrop_ValueChanged" Margin="12,12,12,9" Name="SliderCrop"  IsSnapToTickEnabled="True" Maximum="25" TickPlacement="None" TickFrequency="0.1" SmallChange="1" LargeChange="10" AutoToolTipPlacement="BottomRight" />
        <Button Content="Set Crop" Height="23" HorizontalAlignment="Left" Margin="271,3,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="Crop_Click" Grid.Row="1" />
        <TextBlock Text="{Binding ElementName=SliderCrop, Path=Value, StringFormat='0.00'}" Height="24" HorizontalAlignment="Right" Margin="0,7,225,0" Name="label1" VerticalAlignment="Top" Grid.Row="1" />
        <TextBlock Height="23" Margin="12,7,247,0" Name="textBlock1" Text="% Crop Bounds:" VerticalAlignment="Top" Grid.Row="1" />
    </Grid>
</Window>
