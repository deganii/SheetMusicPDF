<Window x:Class="SheetMusicPDF.CropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CropWindow" Height="114" Width="372">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Slider ValueChanged="SliderCrop_ValueChanged" Margin="12,12,12,9" Name="SliderCrop" Value="{Binding CropValue, Mode=TwoWay}" IsSnapToTickEnabled="True" Maximum="300" TickPlacement="BottomRight" TickFrequency="1" SmallChange="1" LargeChange="10" />
        <Button Content="Set Crop" Height="23" HorizontalAlignment="Left" Margin="271,3,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="Crop_Click" Grid.Row="1" />
        <Label Content="{Binding ElementName=SliderCrop, Path=Value}" Height="28" HorizontalAlignment="Left" Margin="86,3,0,0" Name="label1" VerticalAlignment="Top" Grid.Row="1" />
        <TextBlock Height="23" Margin="12,7,275,0" Name="textBlock1" Text="Crop Bounds:" VerticalAlignment="Top" Grid.Row="1" />
    </Grid>
</Window>
